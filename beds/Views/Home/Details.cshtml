  Purpose: Details view for the web application
  this allows the user to view all the details for an individual patient
*@


@model beds.ViewModels.HomeDetailsViewModel

@{

    ViewBag.Title = "Employee Details";
}
<h3>@Model.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Patients.WaitTime</h2>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.jpg" />

                <h4>Patient ID : @Model.Patients.ID</h4>
                <h4>Gender : @Model.Patients.Sex</h4>
                <h4>Date of Birth : @Model.Patients.DOB.ToString("yyyy/dd/MM")</h4>
                <h4>Location : @Model.Patients.Location</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
